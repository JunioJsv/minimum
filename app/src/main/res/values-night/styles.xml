<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MinimumTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/default_night_color_primary</item>
        <item name="colorPrimaryDark">@color/default_night_color_primary_dark</item>
        <item name="colorAccent">@color/default_accent</item>
        <item name="android:windowBackground">@color/night_color_window_background</item>
        <item name="colorBackgroundFloating">@color/night_color_window_background</item>

        <item name="dialogCornerRadius">@dimen/dp8</item>
        <item name="android:colorControlNormal">?colorAccent</item>
    </style>

    <style name="MinimumTheme.Red">
        <item name="colorAccent">@color/red_accent</item>
    </style>

    <style name="MinimumTheme.Green">
        <item name="colorAccent">@color/green_accent</item>
    </style>

    <style name="MinimumTheme.Blue">
        <item name="colorAccent">@color/blue_accent</item>
    </style>

</resources>