<resources>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/default_light_color_primary</item>
        <item name="colorPrimaryDark">@color/default_light_color_primary_dark</item>
        <item name="colorAccent">@color/default_accent</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/default_dark_color_primary</item>
        <item name="colorPrimaryDark">@color/default_dark_color_primary_dark</item>
        <item name="colorAccent">@color/default_accent</item>
        <item name="android:colorBackground">@color/dark_color_window_background</item>
        <item name="colorBackgroundFloating">@color/dark_color_window_background</item>
        <item name="android:textColorPrimary">@color/dark_text_color_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/dark_text_color_primary</item>
    </style>

    <style name="AppThemeLight.Red">
        <item name="colorPrimary">@color/red_light_color_primary</item>
        <item name="colorPrimaryDark">@color/red_light_color_primary_dark</item>
        <item name="colorAccent">@color/red_accent</item>
    </style>

    <style name="AppThemeLight.Green">
        <item name="colorPrimary">@color/green_light_color_primary</item>
        <item name="colorPrimaryDark">@color/green_light_color_primary_dark</item>
        <item name="colorAccent">@color/green_accent</item>
    </style>

    <style name="AppThemeLight.Blue">
        <item name="colorPrimary">@color/blue_light_color_primary</item>
        <item name="colorPrimaryDark">@color/blue_light_color_primary_dark</item>
        <item name="colorAccent">@color/blue_accent</item>
    </style>

    <style name="AppThemeDark.Red">
        <item name="colorAccent">@color/red_accent</item>
    </style>

    <style name="AppThemeDark.Green">
        <item name="colorAccent">@color/green_accent</item>
    </style>

    <style name="AppThemeDark.Blue">
        <item name="colorAccent">@color/blue_accent</item>
    </style>

</resources>
