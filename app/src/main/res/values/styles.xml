<resources>

    <style name="MinimumTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/default_color_primary</item>
        <item name="colorPrimaryDark">@color/default_color_primary_dark</item>
        <item name="colorAccent">@color/default_accent</item>
        <item name="android:windowBackground">@color/color_window_background</item>
        <item name="colorBackgroundFloating">@color/color_window_background</item>

        <item name="dialogCornerRadius">@dimen/dp8</item>
        <item name="android:colorControlNormal">?colorAccent</item>
    </style>

    <style name="MinimumTheme.Red">
        <item name="colorPrimary">@color/red_color_primary</item>
        <item name="colorPrimaryDark">@color/red_color_primary_dark</item>
        <item name="colorAccent">@color/red_accent</item>
    </style>

    <style name="MinimumTheme.Green">
        <item name="colorPrimary">@color/green_color_primary</item>
        <item name="colorPrimaryDark">@color/green_color_primary_dark</item>
        <item name="colorAccent">@color/green_accent</item>
    </style>

    <style name="MinimumTheme.Blue">
        <item name="colorPrimary">@color/blue_color_primary</item>
        <item name="colorPrimaryDark">@color/blue_color_primary_dark</item>
        <item name="colorAccent">@color/blue_accent</item>
    </style>

</resources>
