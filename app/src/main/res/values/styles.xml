<resources>

    <style name="light_mode" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_color_primary</item>
        <item name="colorPrimaryDark">@color/light_color_primary_dark</item>
        <item name="colorAccent">@color/light_color_accent</item>
    </style>

    <style name="dark_mode" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/dark_color_primary</item>
        <item name="colorPrimaryDark">@color/dark_color_primary_dark</item>
        <item name="colorAccent">@color/light_color_accent</item>
        <item name="android:windowBackground">@color/dark_color_window_background</item>
        <item name="android:textColorPrimary">@color/dark_text_color_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/dark_text_color_primary</item>
    </style>

    <style name="settings_category">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/light_color_accent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="settings_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="settings_container">
        <item name="android:padding">16dp</item>
    </style>

    <style name="settings_subtitle" parent="android:TextAppearance.Material.Widget.Toolbar.Subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
