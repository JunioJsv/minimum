<resources>
    <style name="AppThemeDynamicColors" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="actionBarStyle">@style/AppThemeActionBarStyle</item>
        <item name="android:statusBarColor">?colorPrimaryContainer</item>
        <item name="alertDialogTheme">@style/AppThemeAlertDialog</item>
    </style>

    <style name="AppThemeActionBarStyle" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">?colorPrimaryContainer</item>
        <item name="backgroundStacked">?colorPrimaryContainer</item>
        <item name="backgroundSplit">?colorPrimaryContainer</item>
    </style>

    <style name="AppThemeAlertDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="dialogCornerRadius">@dimen/dp8</item>
    </style>
</resources>
