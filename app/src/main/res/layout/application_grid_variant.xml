<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackgroundBorderless"
    android:gravity="center_horizontal">

    <include
        android:id="@+id/include_application_icon"
        layout="@layout/application_icon" />

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/include_application_icon"
        android:layout_alignStart="@+id/include_application_icon"
        android:layout_alignEnd="@+id/include_application_icon"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAlignment="center"
        tools:text="@string/app_name" />

</RelativeLayout>