<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/settings_category"
            android:text="@string/appearance_category" />

        <LinearLayout
            style="@style/settings_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/settings_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dark_mode_title" />

            <Switch
                android:id="@+id/dark_mode"
                style="@style/settings_subtitle"
                android:text="@string/dark_mode_description" />
        </LinearLayout>

        <TextView
            style="@style/settings_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_category" />

        <LinearLayout
            style="@style/settings_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/settings_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/version"
                style="@style/settings_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            style="@style/settings_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/settings_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/author_title" />

            <TextView
                style="@style/settings_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/author_description" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>